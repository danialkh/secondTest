<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:paddingTop="25dp"
    android:paddingStart="25dp"
    android:paddingEnd="25dp"
    android:background="@android:color/transparent"
    tools:context=".MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/IVMenulogo"
        android:layout_marginTop="10dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="animLogoMotion.json"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />




    <TextView

        android:id="@+id/MenuUserFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/IVMenulogo"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="@color/colorGray"
        android:fontFamily="@font/ir_sans"
        android:text="نام کامل" />

    <TextView
        
        android:id="@+id/MenuUserNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MenuUserFullName"
        android:fontFamily="@font/ir_sans"
        android:textSize="12sp"
        android:textColor="@color/colorGray"
        android:letterSpacing="0.3"
        android:text="09198553651" />



</androidx.constraintlayout.widget.ConstraintLayout>
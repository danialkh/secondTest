<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <ImageView
        android:id="@+id/item_viewpager1"
        android:layout_width="28dp"
        android:layout_height="40dp"
        android:layout_marginStart="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_viewpager2"
        app:layout_constraintEnd_toStartOf="@+id/item_viewpager2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_viewpager2"
        app:srcCompat="@drawable/icon_sarresid"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/item_viewpager2"
        android:layout_width="30dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_viewpager3"
        app:layout_constraintEnd_toStartOf="@+id/item_viewpager3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_viewpager1"
        app:layout_constraintTop_toTopOf="@+id/item_viewpager3"
        app:srcCompat="@drawable/icon_daftarche"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/item_viewpager3"
        android:layout_width="28dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_viewpager4"
        app:layout_constraintEnd_toStartOf="@+id/item_viewpager4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_viewpager2"
        app:layout_constraintTop_toTopOf="@+id/item_viewpager4"
        app:srcCompat="@drawable/icon_sarresid"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/item_viewpager4"
        android:layout_width="28dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_viewpager5"
        app:layout_constraintEnd_toStartOf="@+id/item_viewpager5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_viewpager3"
        app:layout_constraintTop_toTopOf="@+id/item_viewpager5"
        app:srcCompat="@drawable/icon_sarresid"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/item_viewpager5"
        android:layout_width="28dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_viewpager6"
        app:layout_constraintEnd_toStartOf="@+id/item_viewpager6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_viewpager4"
        app:layout_constraintTop_toTopOf="@+id/item_viewpager6"
        app:srcCompat="@drawable/icon_sarresid"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/item_viewpager6"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_viewpager5"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_sarresid"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/progress_linearLayout_dashboard"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        android:visibility="gone"

        >

        <ImageView
            android:id="@+id/dashboard_add_icon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            app:srcCompat="@drawable/icon_add" />


        <ImageView
            android:id="@+id/dashboard_edit_icon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/icon_edit" />


        <ImageView
            android:id="@+id/dashboard_remove_icon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/remove_icon" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="1px"
        android:layout_height="65dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/progress_linearLayout_dashboard"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vc_img_line_seprator"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/Label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="سررسید 1"
        android:fontFamily="@font/ir_sans"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/item_viewpager1"
        app:layout_constraintStart_toStartOf="@+id/item_viewpager1"
        app:layout_constraintTop_toBottomOf="@+id/item_viewpager1"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/Label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="دفترچه 1"
        android:fontFamily="@font/ir_sans"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/Label1"
        app:layout_constraintEnd_toEndOf="@+id/item_viewpager2"
        app:layout_constraintStart_toStartOf="@+id/item_viewpager2"
        app:layout_constraintTop_toTopOf="@+id/Label1"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/Label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سرریسد 2"
        android:fontFamily="@font/ir_sans"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/Label2"
        app:layout_constraintEnd_toEndOf="@+id/item_viewpager3"
        app:layout_constraintStart_toStartOf="@+id/item_viewpager3"
        app:layout_constraintTop_toTopOf="@+id/Label2"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/Label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سررسید 3"
        android:fontFamily="@font/ir_sans"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/Label3"
        app:layout_constraintEnd_toEndOf="@+id/item_viewpager4"
        app:layout_constraintStart_toStartOf="@+id/item_viewpager4"
        app:layout_constraintTop_toTopOf="@+id/Label3"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/Label5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سررسید 4"
        android:fontFamily="@font/ir_sans"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/Label4"
        app:layout_constraintEnd_toEndOf="@+id/item_viewpager5"
        app:layout_constraintStart_toStartOf="@+id/item_viewpager5"
        app:layout_constraintTop_toTopOf="@+id/Label4"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/Label6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="دستیار هوشمند"
        android:textColor="@color/colorGray"
        android:textSize="12sp"
        android:fontFamily="@font/ir_sans"
        app:layout_constraintBottom_toBottomOf="@+id/Label5"
        app:layout_constraintEnd_toEndOf="@+id/item_viewpager6"
        app:layout_constraintStart_toStartOf="@+id/item_viewpager6"
        app:layout_constraintTop_toTopOf="@+id/Label5"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>
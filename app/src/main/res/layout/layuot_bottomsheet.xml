<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@android:color/transparent"
    tools:context=".MainActivity"
    android:id="@+id/mainL">


    <ImageView
        android:id="@+id/img_back_bottomShape"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"


        app:srcCompat="@drawable/vc_back_bottomsheet" />

    <ImageView
        android:id="@+id/img_takhtBottomShape"
        android:layout_width="50dp"
        android:layout_height="7dp"
        android:paddingStart="8dp"
        android:paddingTop="3dp"
        android:paddingEnd="8dp"
        android:paddingBottom="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_back_bottomShape"
        app:srcCompat="@drawable/vc_bottomsheet_takht"

        />

    <ImageView
        android:id="@+id/ShowerLableState"
        android:layout_width="62dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomSheet_label5"
        app:layout_constraintEnd_toEndOf="@+id/bottomSheet_label5"
        app:layout_constraintStart_toStartOf="@+id/bottomSheet_label5"
        app:layout_constraintTop_toTopOf="@+id/bottomSheet_label5"
        app:srcCompat="@drawable/vc_selected_label_shower" />

    <TextView
        android:id="@+id/bottomSheet_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ir_sans"
        android:text="تاریخ"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:textColor="@android:color/black"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomSheet_label3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bottomSheet_label3"
        app:layout_constraintTop_toTopOf="@+id/bottomSheet_label3" />

    <TextView
        android:id="@+id/bottomSheet_label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ir_sans"
        android:text="دسته بندی"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:textColor="@android:color/black"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomSheet_label5"
        app:layout_constraintEnd_toStartOf="@+id/bottomSheet_label2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bottomSheet_label5"
        app:layout_constraintTop_toTopOf="@+id/bottomSheet_label5" />


    <TextView
        android:id="@+id/bottomSheet_label5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="محصولات"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:fontFamily="@font/ir_sans"
        android:textColor="@android:color/white"
        android:textSize="13dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toTopOf="@+id/img_back_bottomShape"
        app:layout_constraintEnd_toStartOf="@+id/bottomSheet_label3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="15dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/SliderViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"
        android:foregroundGravity="center"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/ShowerLableState"
        app:layout_constraintBottom_toBottomOf="@+id/img_back_bottomShape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.viewpager.widget.ViewPager>

</androidx.constraintlayout.widget.ConstraintLayout>
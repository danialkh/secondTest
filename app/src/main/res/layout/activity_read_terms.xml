<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGraybackground"
    tools:context=".verification.ReadTermsActivity">

    <ImageView
        android:src="@drawable/back_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/BTReadTerms"
        android:layout_marginBottom="20dp"
        android:layout_margin="16dp"
        android:background="@drawable/vc_back_terms"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/TVTerms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ir_sans"
        android:justificationMode="inter_word"
        android:singleLine="false"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"

        />

    </androidx.core.widget.NestedScrollView>


    <androidx.cardview.widget.CardView
        android:id="@+id/BTReadTerms"
        android:layout_width="200dp"
        android:layout_height="40sp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/colorthemeBluePorang"
        android:elevation="0dp"
        app:cardElevation="0dp"

        android:animateLayoutChanges="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="قوانین را خواندم"
            android:textColor="@color/white"
            android:fontFamily="@font/byekan"
            android:layout_gravity="center"
            />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>